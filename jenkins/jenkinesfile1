

pipeline {
    agent any

    stages {
        stage('build') {
            steps { 
               sh '''
                echo "build is successful"'
                docker image build -t app_image:1.0 ${WORKSPACE}/docker/
                '''
              
            }
        }
         stage('deploy') {
            steps {
                sh 'echo "build is successful"'
            }
        }
        stage('test'){
            steps{
                sh 'echo "build is successful"'
            }
        }
        
    }
}
