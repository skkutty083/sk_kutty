pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                sh '''
                echo "Build is successful"
                docker image build -t app_image:1.0 ${WORKSPACE}/docker/
                '''
            }
        }

        stage('deploy') {
            steps {
                sh 'echo "Deployment is successful"'
            }
        }

        stage('test') {
            steps {
                sh 'echo "Testing is successful"'
            }
        }
    }
}
